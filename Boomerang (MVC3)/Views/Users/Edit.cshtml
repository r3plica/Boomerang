@model MembershipUser

@{
    ViewBag.Title = "Edit user";
}

@section navigation
{
	<li>@Html.ActionLink("Index", "Index", "Home")<span></span></li>
	<li>@Html.ActionLink("Clients", "Index", "Clients")<span></span></li>
	<li>@Html.ActionLink("Candidates", "Index", "Candidates")<span></span></li>
	<li id="current">@Html.ActionLink("Users", "Index", "Users")<span></span></li>
	<li>@Html.ActionLink("Profile", "Index", "Account")<span></span></li>
	<li>@Html.ActionLink("Lists", "Index", "Lists")<span></span></li>
}

<div class="container">
    <div class="row">
        <div class="twelvecol last">
            
            <h2>@ViewBag.Title</h2>

            <div class="form">

                <div class="table">

                    <div class="table-row">

                        <div class="tabel-cell sixcol">
                    
                            @Html.LabelFor(m => m.UserName)
                            <div class="input">@Html.TextBoxFor(m => m.UserName, new { tabindex = 1 })</div>
                    
                            @Html.LabelFor(m => m.Email)
                            <div class="input">@Html.TextBoxFor(m => m.Email, new { tabindex = 2 })</div>

                        </div>

                        <div class="tabel-cell sixcol last">

                            <label>Password</label>
                            <div class="input"><input type="password" name="Password" tabindex="3" /></div>

                            <label>Confirm password</label>
                            <div class="input"><input type="password" name="ConfirmPassword" tabindex="4" /></div>

                        </div>

                    </div>

                </div>

                <div class="no-border">
                    <button class="save primary" tabindex="5">Save</button><a href="/Account">back to the user list</a>
                </div>
        
            </div>
        
        </div>
    </div>
</div>

